# Telegram Bot Configuration (Server-side)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Bot Configuration (Client-side - for static builds)
# Set these as GitHub variables: TELEGRAM_BOT_TOKEN and TELEGRAM_CHAT_IDS
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=your_bot_token_here
NEXT_PUBLIC_TELEGRAM_CHAT_IDS=chat_id_1,chat_id_2,chat_id_3

# Fallback subscribers (comma-separated Chat IDs)
# These always receive notifications even without Upstash
TELEGRAM_SUBSCRIBER_IDS=

# Upstash Redis (required for PIN system & subscriber storage)
# Get free account at: https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here
